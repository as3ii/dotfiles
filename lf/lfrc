# basic settings
set preview false
set previewer ~/.script/preview
set hidden false
set color256 true
set drawbox true
set icons true
set ignorecase true
set shell sh
set shellopts '-eu'

# functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$fx";;
        video/*|application/pdf) xdg-open "$f" & diown;;
        *) for f in "$fx"; do xdg-open "$f" > /dev/null 2> /dev/null & done;;
    esac
}}


cmd mkdir ${{
	set -f
	printf "Dir name: "
	read ans
	mkdir "$ans"
}}


cmd touch ${{
    set -f
	printf "File name: "
    read ans
    $EDITOR "$ans"
}}


# extract archive
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}


# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}


cmd term ${{
    $TERMINAL &
}}

# disable some default keymap
map m
map "'"
map '"'

# keymap functions
map <enter> open
map <bs2> updir
map e ${{$TERMINAL -e $EDITOR $f &}}
map H set hidden!
map R reloadi && refresh

map gc cd ~/.config
map ge cd /etc
map gb cd /boot
map gh cd ~
map gd cd ~/Downloads
map gv cd /mnt/volume
map gs cd ~/.script
map gpc cd ~/Pictures
map gpr cd ~/prog
map uni cd /mnt/volume/UNI

