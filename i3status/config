general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "ipv6"
#order += "run_watch DHCP"
order += "read_file VPN0"
order += "wireless wlp2s0"
order += "ethernet enp3s0"
order += "disk /"
order += "battery all"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "tztime local"

wireless wlp2s0 {
        format_up = "W: (%essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp3s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status%percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 15
		hide_seconds = true
}

run_watch DHCP {
        pidfile = "/var/run/dhcpcd.pid"
}

read_file VPN0 {
        path = "/sys/devices/virtual/net/vpn0/operstate"
        format = "vpn: %content"
        format_bad = "vpn: None"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

cpu_usage {
    format = "cpu: %usage"
}

load {
        format = "load: %1min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
}

disk "/" {
        format = "%avail / %total"
}

volume master {
	format = "â™ª: %volume"
    format_muted = "â™ª: muted"
    device = "default"
    #mixer = "Master"
}
